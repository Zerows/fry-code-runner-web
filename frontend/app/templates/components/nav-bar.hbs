{{#bs-navbar type="dark" backgroundColor="dark" collapsed=collapsed as |navbar|}}
  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" class="navbar-brand"}}Code Fry{{/link-to}}
  </div>
  {{#navbar.content}}
    {{#navbar.nav   as |nav|}}
      {{#if session.isAuthenticated}}
        {{#nav.item}}{{#nav.link-to "pads.index"}}Pads{{/nav.link-to}}{{/nav.item}}
        {{#nav.item}}{{#nav.link-to "questions.index"}}Questions{{/nav.link-to}}{{/nav.item}}
      {{/if}}
    {{/navbar.nav}}
  {{/navbar.content}}
  {{#if session.isAuthenticated}}
    <span class="navbar-text pr-3 light">
        Welcome, {{capitalize userSession.name}}
      </span>
    {{#bs-button type="outline-primary" class='btn-sm' onClick=(action "logout")}}{{fa-icon 'sign-out'}}{{/bs-button}}
  {{else}}
    {{#link-to "login" class='btn btn-primary'}}{{fa-icon 'sign-in'}} Login{{/link-to}}
  {{/if}}
{{/bs-navbar}}


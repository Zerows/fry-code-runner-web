<div class="container">
  <div class="row justify-content-center mt-5">
    {{#if errors}}
      <div class="alert alert-danger">{{errors.[0]}}</div>
    {{/if}}
  </div>

  <div class="row justify-content-end">
    <div class="m-3">
      {{#bs-button class='pull-right' disabled=loading type="success" onClick=(action "createPad")}}
        Create Pad
      {{/bs-button}}
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Language</th>
          <th scope="col">{{fa-icon 'wrench'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |rec index|}}
        <tr>
          <td scope="col">{{index}}</td>
          <td scope="col">{{#link-to 'pads.show' rec.slug}}{{ concat rec.filename }}{{/link-to}}</td>
          <td scope="col">{{capitalize rec.language}}</td>
          <td scope="col">
            {{#bs-button outline=true type="danger" onClick=(action "deletePad" rec)}}
            {{fa-icon 'trash'}}
            {{/bs-button}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class='pad-content container-fluid'>
  <div class="row bg-dark border-bottom border-primary p-1 border-right border-primary">
    <div class="col-6">
      <div class="row">
        <div class="col-9">
          <input type="text" class="title form-control px-1" value={{model.filename}} onchange={{action (mut model.filename) value="target.value"}}>
        </div>
        <div class="col-3">
          <select class="custom-select custom-select-sm" disabled={{showProgress}} onchange={{action (mut model.language) value="target.value"}}>
            {{#each supportedLanguages as |rec|}}
            <option selected={{eq rec model.language}} value={{rec}}>{{capitalize rec}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="result m-2">
        <span class="title p-1">Output</span>
        {{load-spinner show=showLoader}}
      </div>
    </div>
  </div>

  <div class="row monokai-bg p-1">
    <div class="col-6 col-lg-6 col-md-6 col-sm-10">
      {{ember-ace showPrintMargin=false theme="ace/theme/monokai"
      lines=30 mode=(concat "ace/mode/" model.language)
      value=model.content update=(action (mut model.content))}}
    </div>
    <div class="col-6 col-lg-6 col-md-6 col-sm-10 no-padding">
      <div>
        {{#result-container class='code-output' result=result }}{{/result-container}}
      </div>
    </div>
  </div>
</div>
<div class="container-fluid p-3 bg-dark border-top border-primary">
  <div class="row">
    <div class="col-6">
      <div class="row justify-content-end">
        <div class="col-3">
          <button class="btn btn-primary btn-block text-truncate"  onClick={{action "save" model}}  disabled={{showLoader}}>
            {{saveText}}
          </button>
        </div>
        <div class="col-3">
          <button class="btn btn-success btn-block text-truncate" onClick={{action "submitPad" model}} disabled={{showLoader}}>
            {{submitText}}
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
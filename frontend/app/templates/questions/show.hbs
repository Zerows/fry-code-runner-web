<div class='pad-content container-fluid'>
  <div class="row bg-dark border-bottom border-primary p-1 border-right border-primary justify-content-center">
    <div class="col-6">
      <input type="text" class="title form-control px-1" value={{model.title}} onchange={{action (mut model.title) value="target.value"}}>
    </div>
    <div class="col-2">
      <select class="custom-select custom-select-sm" disabled={{showLoader}} onchange={{action (mut model.language) value="target.value"}}>
        {{#each supportedLanguages as |rec|}}
        <option selected={{eq rec model.language}} value={{rec}}>{{capitalize rec}}</option>
        {{/each}}
      </select>
    </div>
    <div class="col-2">
      <select class="custom-select custom-select-sm" disabled={{showLoader}} onchange={{action (mut model.difficulty) value="target.value"}}>
        {{#each difficulty as |rec|}}
        <option selected={{eq rec model.difficulty}} value={{rec}}>{{capitalize rec}}</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="row monokai-bg p-1 justify-content-center">
    <div class="col-10">
      {{ember-ace showPrintMargin=false theme="ace/theme/monokai"
      lines=30 mode=(concat "ace/mode/" model.language)
      value=model.content update=(action (mut model.content))}}
    </div>
  </div>
</div>

<div class="container-fluid p-3 bg-dark border-top border-primary">
  <div class="row">
    <div class="col-6">
      <div class="row justify-content-end">
        <div class="col-3">
          <button class="btn btn-primary btn-block text-truncate" onClick={{action "saveQuestion" model}} disabled={{showLoader}}>
            {{saveText}}
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
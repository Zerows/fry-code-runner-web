<div class="container">
  <div class="row justify-content-center mt-5 pt-3 pb-2">
    <h3 class="card-title">Guest Signup</h3>

  </div>
  <div class="row justify-content-center">
    {{#bs-form model=this class="col-sm-8 col-md-8 col-lg-6 card p-5" onSubmit=(action "signup") as |form|}}

    {{#if error}}
    <div class="alert alert-danger">
      <strong>{{error.message}}</strong>
    </div>
    {{/if}}

    {{form.element
    controlType="name"
    label="Name"
    placeholder="Name"
    property="name"
    required=true
    }}

    {{#if logging}}
    <div class="mb-3 text-center">
      {{load-spinner size=5 show=logging}}
    </div>
    {{/if}}
  
    {{bs-button
    defaultText="Sign in as Guest"
    type="primary"
    disabled=logging
    buttonType="submit"
    }}

    {{/bs-form}}
  </div>
</div>